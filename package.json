{
  "name": "@ooxml-tools/validate",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/npm/index.js",
  "bin": {
    "ooxml-validate": "./dist/npm/bin/ooxml-validate.js"
  },
  "scripts": {
    "ci:build": "npm install && npm run build",
    "build": "rm -rf ./dist/* && npm run build:dotnet && npm run build:npm",
    "build:dotnet": "cd ./dotnet && dotnet workload restore  && dotnet publish -c Release && mkdir -p ./_framework && rm -rf ./_framework && cp -r ./bin/Release/net8.0/wwwroot/_framework ./_framework",
    "build:npm": "rollup -c rollup.config.mjs",
    "lint:format": "npx prettier . --write",
    "lint": "npx prettier . --check",
    "test": "npm run lint"
  },
  "files": [
    "./dist/npm",
    "./package.json",
    "./README.md"
  ],
  "devDependencies": {
    "@rollup/plugin-virtual": "^3.0.2",
    "prettier": "3.3.3",
    "prettier-plugin-sh": "^0.14.0",
    "rollup": "^4.18.1",
    "rollup-plugin-copy": "^3.5.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=20.x"
  }
}
